<div class="container">
  <h1>Add New Article</h1>
  <div class="form-box">
    <%= form_for @article do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title, value: @article.title %>
      </div>
      <div>
        <%= f.label :content %>
        <%= f.text_field :content, value: @article.content %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>

<ul>
  <% if @article.errors %>
  <% @article.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  <% end %>
</ul>
</div>
